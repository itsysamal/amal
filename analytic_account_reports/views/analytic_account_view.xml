<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_analytic_account_reports_form" model="ir.ui.view">
        <field name="name">analytic.analytic.account.form</field>
        <field name="model">account.analytic.account</field>
        <field name="arch" type="xml">
            <form string="Analytic Account Reports" duplicate="0" create="0" delete="0" edit="0">
                <header>
                    <button name="analytic_print_xls" string="Print Analytic Account Form Report XLSX" type="object"
                            class="btn btn-primary"/>
                </header>
                <sheet string="Analytic Account">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(analytic.account_analytic_line_action)d"
                                icon="fa-usd" string="Cost/Revenue" widget="statinfo"/>
                        <button class="oe_stat_button" type="action" name="
                        %(account_budget.act_account_analytic_account_cb_lines)d" icon="fa-usd" string="Budget"
                                widget="statinfo"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="e.g. Project XYZ" string="رقم العملية"/>
                        </h1>
                    </div>
                    <div name="project"/>
                    <group name="main">
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="code"/>
                            <field name="partner_id"/>
                            <field name="product_id" string="item"
                                   options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="qty_purchased"/>
                            <field name="qty_sold"/>
                            <field name="balance_so_po"/>
                            <field name="vendor_id" string="Supplier"/>
                            <field name="pro_category_id"/>
                            <field name="cost_revenue"/>
                            <field name="account_expense_collection_ids" widget="many2many_tags"/>
                            <field name="total_cost_revenue"/>
                            <field name="total_cost_per_qty"/>
                        </group>
                        <group>
                            <field name="group_id"/>
                            <field name="parent_id" string="Parent Analytic Account"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency" invisible="1"/>
                            <field name="product_template_attribute_value_ids" groups="product.group_product_variant"
                                   widget="many2many_tags"/>
                            <field name="qty_purchased" string="الكمية المشتراه"/>
                            <field name="unit_price_purchased" string="سعر الشراء $" invisible="1"/>
                            <field name="po_multi_cur_ids" widget="many2many_tags" string="Currency/سعر الشراء"/>
                            <field name="cost_purchased" string="Purchase Cost"/>
                            <field name="total_revenue_income_other"/>
                            <field name="total_profit"/>
                            <field name="total_qty_result"/>
                            <field name="total_balance"/>
                        </group>
                    </group>
                    <notebook groups="account.group_account_user">
                        <page string="Budget Items">
                            <field name="crossovered_budget_line" widget="one2many" colspan="4" nolabel="1" mode="tree">
                                <tree string="Budget Items" editable="top">
                                    <field name="crossovered_budget_id"/>
                                    <field name="general_budget_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="paid_date"/>
                                    <field name="planned_amount" widget="monetary"/>
                                    <field name="practical_amount" sum="Practical Amount" widget="monetary"/>
                                    <field name="theoritical_amount" sum="Theoritical Amount" widget="monetary"/>
                                    <field name="percentage"/>
                                </tree>
                                <form string="Budget Items">
                                    <group>
                                        <field name="crossovered_budget_id"/>
                                        <field name="general_budget_id"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="paid_date"/>
                                        <field name="planned_amount" widget="monetary"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_account_analytic_account_reports_list" model="ir.ui.view">
        <field name="name">account.analytic.account.reports.list</field>
        <field name="model">account.analytic.account</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Analytic Accounts Reports" duplicate="0" create="0" delete="0" edit="0">
                <field name="qty_purchased" sum="QTY PURCHASED"/>
                <field name="qty_sold" sum="QTY SOLD"/>
                <field name="balance_so_po" sum="BALANCE"/>
                <field name="name" string="رقم العملية"/>
                <field name="group_id" string="Group"/>
                <field name="product_id" string="item"/>
                <field name="vendor_id" string="Supplier"/>
                <field name="pro_category_id"/>
                <field name="product_template_attribute_value_ids" groups="product.group_product_variant"
                       widget="many2many_tags"/>
                <field name="qty_purchased" sum="QTY PURCHASED" string="الكمية المشتراه"/>
                <field name="unit_price_purchased" sum="Unit Price PURCHASED" string="سعر الشراء $" invisible="1"/>
                <field name="po_multi_cur_ids" widget="many2many_tags" string="Currency/سعر الشراء"/>
                <field name="currency_id" string="Currency" invisible="1"/>
                <field name="cost_purchased" sum="Purchase Cost" string="Purchase Cost"/>
                <field name="cost_revenue" sum="Cost Of Revenue" string="Cost Of Revenue"/>
                <field name="account_expense_collection_ids" widget="many2many_tags"/>
                <field name="total_cost_revenue" sum="Total cost of revenue" string="Total cost of revenue"/>
                <field name="total_cost_per_qty" sum="Total cost Per QTY" string="تكلفة الطن Total cost/qty"/>
                <field name="total_revenue_income_other" sum="Revenue" string="Revenue"/>
                <field name="total_profit" sum="Profit" string="Profit"/>
                <field name="total_qty_result" sum="Total QTY Result" string="ناتج الكمية المباعة"/>
                <field name="total_balance" sum="Total Balance" string="سعر التعادل"/>
                <field name="code" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="debit" sum="Debit" invisible="1"/>
                <field name="credit" sum="Credit" invisible="1"/>
                <field name="balance" sum="Balance" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="action_account_analytic_account_reports_form" model="ir.actions.act_window">
        <field name="name">Analytic Accounts Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.analytic.account</field>
        <field name="search_view_id" ref="analytic.view_account_analytic_account_search"/>
        <field name="context">{'search_default_active':1}</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_analytic_account_reports_list')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_analytic_account_reports_form')}),
               ]"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new analytic account
            </p>
        </field>
    </record>
    <menuitem action="action_account_analytic_account_reports_form" id="account_analytic_def_account_reports"
              parent="account.account_reports_management_menu"
              groups="analytic.group_analytic_accounting" sequence="2"/>

    <record id="view_product_template_form_add_print_in_analytic_reports" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']/tree//field[@name='value_ids']"
                   position="after">
                <field name="print_in_analytic_reports" string="Print in Analytic Account Reports?"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_account_form_add_print_in_analytic_reports" model="ir.ui.view">
        <field name="name">account.account.form</field>
        <field name="model">account.account</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deprecated']" position="after">
                <field name="is_cost_revenue"/>
                <field name="is_expense"/>
            </xpath>
        </field>
    </record>
</odoo>
