<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">



		 <record id="hr_payroll_salary_structure_type_advance" model="hr.payroll.structure.type">
            <field name="name">السلف</field>
            <field name="country_id" eval="False"/>
        </record>

        <record id="hr_payroll_salary_structure_advance" model="hr.payroll.structure">
            <field name="name">السلف</field>
            <field name="country_id" eval="False"/>
            <field name="regular_pay" eval="True"/>
            <field name="type_id" ref="hr_payroll_salary_structure_type_advance"/>
        </record>



		<record id="hr_payroll_hr_rule_advance" model="hr.salary.rule">
			<field name="name">السلف</field>
			<field name="sequence" eval="10"/>
			<field name="code">AD</field>
			<field name="category_id" ref="hr_payroll.DED"/>
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result=(payslip.advance)</field>
		 <field name="struct_id" ref="hr_payroll_salary_structure_advance"/>

		</record>

        <record id="hr_payslip_input_type_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.input.type.form</field>
            <field name="model">hr.payslip.input.type</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_input_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="advance" />
                </xpath>
            </field>
        </record>

	</data>
</openerp>
