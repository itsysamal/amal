<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="advance_departments_action" model="ir.actions.act_window">
            <field name="name">أقسام السلف</field>
            <field name="res_model">advance.departments</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                     انشاء قسم سلفه جديد
          </p>
            </field>
        </record>


          <record id="advance_departments_form_view" model="ir.ui.view">
            <field name="name">advance.departments.from</field>
            <field name="model">advance.departments</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    <button name="approve" groups="advances.access_advance_depart_confirm_cancel" string="تأكيد" type="object" states="draft" class="oe_highlight"/>
                    <button name="set_to_draft" string="الرجوع للأفتراضي" type="object" states="cancel" class="oe_highlight"/>
                    <button name="cancel" groups="advances.access_advance_depart_confirm_cancel" string="الغاء" type="object" states="approve"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="date_to"/>
                                <field name="user_id" invisible="1"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="أقسام السلف">
                                <field name="advance_lines_id">
                                    <tree editable="bottom">
                                        <field name="department_id" required="1" />
                                        <field name="amount" />

                                    </tree>
                                </field>
                                <group>

                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                            </page>
                        </notebook>
                  </sheet>
                     <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>

            </field>
        </record>

        <record id="advance_departments_tree_view" model="ir.ui.view">
            <field name="name">advance.departments.tree</field>
            <field name="model">advance.departments</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-success="state == 'approve'"
                decoration-warning="state == 'cancel'" >
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>

            </field>
        </record>
           <menuitem
                id="employee_advance_menu_main"
                  name="السلف"
                 web_icon="advances,static/description/sulfa.png"
                 groups="advances.access_advance"/>
                  />

        <menuitem
                id="advance_departments_menu"
                parent="employee_advance_menu_main"
                  name="أقسام السلف"
                  action="advance_departments_action"
                  sequence="1"
                  />
    </data>
</odoo>