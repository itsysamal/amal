<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="employee_advance_action" model="ir.actions.act_window">
            <field name="name">السلف</field>
            <field name="res_model">employee.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                 <p class="o_view_nocontent_smiling_face">
                     انشاء سلفه جديده
          </p>
            </field>
        </record>


          <record id="employee_advance_form_view" model="ir.ui.view">
            <field name="name">employee.advance.from</field>
            <field name="model">employee.advance</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    <button name="confirm" groups="advances.access_advance_confirm_cancel" string="تأكيد" type="object" states="draft" class="oe_highlight"/>
                    <button name="set_to_draft" string="الرجوع للأفتراضي" type="object" states="cancel" class="oe_highlight"/>
                    <button name="cancel" groups="advances.access_advance_confirm_cancel" string="الغاء" type="object" states="draft,confirm"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                    </header>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                             <field name="employee_id"/>
                                <field name="department_id" />
                                  <field name="date"/>
                                 <field name="amount"/>
                                <field name="user_id" invisible="1"/>
                        </group>

                            <group string="الضامن">

                                <field name="employee_id1"/>
                                <field name="employee_id2"/>



                            </group>
                        </group>




                  </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>

            </field>
        </record>

        <record id="employee_advance_tree_view" model="ir.ui.view">
            <field name="name">employee.advance.tree</field>
            <field name="model">employee.advance</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-success="state == 'confirm'"
                decoration-warning="state == 'cancel'" >
                    <field name="name"/>
                    <field name="employee_id"/>
                                <field name="department_id" />
                                  <field name="date"/>
                                 <field name="amount"/>
                                 <field name="state"/>
                </tree>

            </field>
        </record>




        <menuitem
                id="employee_advance_menu"
                parent="employee_advance_menu_main"
                  name="السلف"
                  action="employee_advance_action"
                  sequence="2"/>

    </data>
</odoo>